@model Order

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
         <div class="text-danger" asp-validation-summary="All"></div>
        <form method="post" asp-action="Checkout">
            <div class="form-group my-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control ">
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="Line1"></label>
                <input asp-for="Line1" class="form-control ">
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="Line2"></label>
                <input asp-for="Line2" class="form-control ">
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="Line3"></label>
                <input asp-for="Line3" class="form-control ">
            </div>
            <div class="form-group my-3">
                <label class="form-label" asp-for="City"></label>
                <input asp-for="City" class="form-control ">
            </div>
            <div class="form-group my-3">
                <input asp-for="GiftWrap">
                <label>Gift wrap these items </label>
            </div>
            <div class="text-center my-3">
                <button type="submit" class="btn btn-primary">Complete Order</button>
            </div>
        </form>
    </div>
</div>