@model List<Product>
<div class="col-sm-12 col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Products</h6>
                            <div class="mb-0 w-100 d-flex px-4 mb-3 justify-content-end">
                                   <a asp-action="Create" asp-controller="Product" asp-area="Admin" class="btn fs-5 btn-outline-success mr-4  right-0">
                                    New Product 
                                        <i class="fa-regular  fa-square-plus ms-3"></i>
                                    </a>
                            </div>
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        
                                        <th scope="col">#ID</th>
                                        <th scope="col">Image Url</th>
                                        <th scope="col">Product Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Operations</th>
                                     
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var product in Model)
                                    {
                                        <tr>
                                            <th scope="row">@product.Id</th>
                                            <td>
                                                <img width="60" class="rounded p-1 border border-info shadow" src="@product?.ImageUrl" alt="@product.ImageUrl">
                                            </td>
                                            <td>@product.Name</td>
                                            <td><strong class="fs-6">â‚º</strong> @product.Price</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a class="btn btn-warning" asp-action="Update" asp-controller="Product" asp-area="Admin" asp-route-id="@product.Id">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-area="Admin" asp-route-id="@product.Id">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                    <a class="btn btn-info" asp-action="Index" target="_blank" asp-controller="Products" asp-area="">
                                                        <i class="fa fa-search"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>