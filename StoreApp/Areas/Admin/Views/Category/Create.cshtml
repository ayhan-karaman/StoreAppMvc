@model CategoryDtoForInsertion

<div class="row">
    <div class="col-sm-12 col-xl-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Product Add</h6>
            <form method="post"  asp-action="Create" asp-controller="Category" asp-area="Admin">
                <div class="text-danger" asp-validation-summary="All"></div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary"> <i class="fa fa-save"></i> Save</button>
                    <a class="btn btn-outline-primary" asp-action="Index" asp-area="Admin" asp-controller="Category">
                     <i class="fa fa-list"></i> Products
                    </a>
                </div>      
            </form>
        </div>
    </div>
</div>